{
    "name": "@prices/slcan",
    "version": "0.1.0",
    "description": "nodejs serial line CAN support",
    "main": "./lib/serial.js",
    "repository": {
        "type": "git",
        "url": "git://github.com/prices/node-slcan.git"
    },
    "keywords": [
        "serial",
        "can"
    ],
    "author": "Scott Price",
    "license": "BSD",
    "scripts": {
        "prepare": "tsc",
        "pretest": "npm run check; npm run prepare",
        "test": "nyc mocha",
        "check": "tslint --project .",
        "fix": "tslint --fix --project .",
        "doc": "typedoc --tsconfig ./tsconfig.json",
        "clean": "rm -Rf lib docs rel"
    },
    "files": [
        "lib"
    ],
    "publishConfig": {
        "registry":"https://npm.pkg.github.com"
    },
    "dependencies": {
        "@types/serialport": "^8.0.1",
        "serialport": "^9.0.0",
        "stream": "0.0.2"
    },
    "devDependencies": {
        "@types/assert": "^1.5.3",
        "@types/mocha": "^8.2.0",
        "@types/node": "^14.14.20",
        "@types/sinon": "^9.0.4",
        "@typescript-eslint/eslint-plugin": "^4.12.0",
        "@typescript-eslint/eslint-plugin-tslint": "^4.12.0",
        "@typescript-eslint/parser": "^4.12.0",
        "assert": "^2.0.0",
        "eslint": "^7.17.0",
        "mocha": "*",
        "nyc": "^15.1.0",
        "sinon": "^9.0.3",
        "ts-node": "^8.10.2",
        "tslint": "^6.1.2",
        "typedoc": "*",
        "typescript": "*"
    },
    "nyc": {
        "reporter": [
            "lcov",
            "cobertura",
            "text"
        ],
        "report-dir": "./build/coverage",
        "all": true,
        "include": [
            "lib/",
            "src/"
        ],
        "exclude": [
            "build/",
            "**/*.spec.ts"
        ],
        "watermarks": {
            "lines": [
                80,
                95
            ],
            "functions": [
                80,
                95
            ],
            "branches": [
                80,
                95
            ],
            "statements": [
                80,
                95
            ]
        }
    }
}
